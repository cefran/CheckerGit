<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<ScrollView
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:fillViewport="true"
    android:gravity="top"
    >
<LinearLayout 
    android:id="@+id/scroll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
    android:id="@+id/place_cover"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:adjustViewBounds="true"
    android:scaleType="fitXY"
    android:src="@drawable/logo">
    </ImageView>
    <LinearLayout
    android:id="@+id/separator_cover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.01"
    android:background="#3E87D1"
    android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
    android:id="@+id/action_button_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.001"
    android:orientation="horizontal">
    
    <Button
    style="@style/shadoweffect"
    android:id="@+id/detail_button"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="0.495"
    android:textSize="15sp"
    android:text="Details"
    android:background="#00375C"/>
    
    <LinearLayout
    android:id="@+id/separator_button"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="0.01"
    android:background="#3E87D1"
    android:orientation="horizontal"
        />
    <Button
    style="@style/shadoweffect"
    android:id="@+id/map_button"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="0.495"
    android:textSize="15sp"
    android:text="Map"
    android:background="#00375C"/>
    </LinearLayout>
    
    <LinearLayout
    android:id="@+id/content_layout_shadow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.02"
    android:orientation="vertical"
    android:background="@drawable/content_shadow">
    </LinearLayout>
   
    <!-- Framelayout to display Fragments -->
    <FrameLayout
        android:id="@+id/frame_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />
   
    </LinearLayout>
    </ScrollView> 
    
	<!-- Bottom Button --> 
    <LinearLayout
    android:id="@+id/go_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="100"
    android:orientation="vertical"
    android:background="#B2B2A8"
    >
    <Button
    android:id="@+id/go_button"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.495"
    android:textSize="15sp"
    android:text="Let's Go"
    android:background="#00375C"/>
    <LinearLayout
    android:id="@+id/go_layout_shadow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="50"
    android:orientation="vertical"
    android:background="@drawable/letsgo_button_background"
    />
    </LinearLayout>
</LinearLayout>